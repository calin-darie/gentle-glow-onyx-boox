<resources>

    <style name="Theme_Dialog" parent="android:Theme.Holo.Light.Dialog.NoActionBar.MinWidth">
        <!-- let people preview their content in the light that they're setting -->
        <!-- so leave some space around the dialog... -->
        <item name="android:windowMinWidthMajor">65%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <!-- ...and don't shade it -->
        <item name="android:backgroundDimEnabled">false</item>

        <!-- enable floating out of the keyboard's way -->
        <item name="android:windowIsFloating">true</item>

        <!-- maybe one day we'll have a custom title bar, but until then:  -->
        <item name="android:windowTitleStyle">@null</item>

        <item name="android:windowBackground">@android:drawable/alert_light_frame</item>

        <item name="android:buttonStyle">@android:attr/borderlessButtonStyle</item>

        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="switch_with_large_thumb" parent="android:Theme.Material.Light.Dialog.NoActionBar.MinWidth">
        <item name="android:textOn">@string/switch_on</item>
        <item name="android:textOff">@string/switch_off</item>
        <item name="android:showText">false</item>
        <item name="android:switchPadding">10dp</item>
    </style>

</resources>
